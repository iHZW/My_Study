  pod 'CWLateralSlide', '1.6.5'
  pod 'PINCache','2.3'
  pod 'KissXML','5.2.3'
  pod 'FMDB','>=2.7.1'
#  钥匙串 和永久保存使用
  pod 'SAMKeychain', '1.5.3'
#   播放器
  pod 'SJBaseVideoPlayer', '3.5.2'
  
  pod 'CocoaAsyncSocket'
  
  #本地库
#  pod 'MJUtils', :path => 'LocalLib/MJUtils'
