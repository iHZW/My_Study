####  Debug调试相关 ####
def debugTool
  # debug工具

  # 查看UI结构
  pod 'LookinServer', '1.0.0',  :configurations => ['Debug','QA','QA_Dev']

  # DoKit
  pod 'DoraemonKit/Core', '3.0.2', :configurations => ['Debug','QA','QA_Dev']
end


target 'My_Study' do

  use_frameworks!
  
  # 返回侧滑适配有导航栏和没导航栏的切换
  pod 'FDFullscreenPopGesture', '~> 1.1'

  pod 'AFNetworking'
  pod 'Masonry','1.1.0'
  pod 'JSONModel','1.5.0'
  pod 'MJExtension','3.0.15.1'
  pod 'MJRefresh','3.1.15.7'
